---
import Layout from '../../layouts/Layout.astro';
import '../../styles/global.css'
---

<Layout title="Nivel Primaria | BRÜNING SCHOOL">
  <main class="pt-24 md:pt-20">
    
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-colegio-blue via-colegio-blue/90 to-colegio-blue text-white py-20">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <h1 class="text-5xl md:text-6xl font-extrabold mb-6">
          Nivel <span class="text-colegio-yellow">Primaria</span>
        </h1>
        <p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto">
          Educación de calidad para el desarrollo integral de nuestros estudiantes
        </p>
      </div>
    </section>

    <!-- Contenido Principal - Imagen a ancho completo -->
    <div class="w-full">
      <img 
        src="/Niveles/PÁGINA 1.jpeg" 
        alt="Propuesta Educativa Nivel Primaria - BRÜNING SCHOOL"
        class="w-full h-auto object-cover"
      />
    </div>

    <div class="w-full">
      <img 
        src="/Niveles/PÁGINA 2.jpeg" 
        alt="Propuesta Educativa Nivel Primaria - BRÜNING SCHOOL"
        class="w-full h-auto object-cover"
      />
    </div>

    <div class="w-full">
      <img 
        src="/Niveles/PÁGINA 3.jpeg" 
        alt="Propuesta Educativa Nivel Primaria - BRÜNING SCHOOL"
        class="w-full h-auto object-cover"
      />
    </div>

    <div class="w-full">
      <img 
        src="/Niveles/PÁGINA 4.jpeg" 
        alt="Propuesta Educativa Nivel Primaria - BRÜNING SCHOOL"
        class="w-full h-auto object-cover"
      />
    </div>

    <div class="w-full">
      <img 
        src="/Niveles/PÁGINA 5.jpeg" 
        alt="Propuesta Educativa Nivel Primaria - BRÜNING SCHOOL"
        class="w-full h-auto object-cover"
      />
    </div>

    <div class="w-full">
      <img 
        src="/Niveles/PÁGINA 6.jpeg" 
        alt="Propuesta Educativa Nivel Primaria - BRÜNING SCHOOL"
        class="w-full h-auto object-cover"
      />
    </div>

    <div class="w-full">
      <img 
        src="/Niveles/PÁGINA 7.jpeg" 
        alt="Propuesta Educativa Nivel Primaria - BRÜNING SCHOOL"
        class="w-full h-auto object-cover"
      />
    </div>

    <div class="w-full">
      <img 
        src="/Niveles/PÁGINA 8.jpeg" 
        alt="Propuesta Educativa Nivel Primaria - BRÜNING SCHOOL"
        class="w-full h-auto object-cover"
      />
    </div>

    <!-- Plan Lector Section -->
    <section class="bg-white py-24 px-6 md:px-12 lg:px-24">
      <div class="max-w-7xl mx-auto">
        
        <!-- Título Principal Centrado -->
        <div class="text-center mb-20">
          <h2 class="text-5xl md:text-6xl lg:text-7xl font-black text-colegio-blue tracking-tight">
            PLAN LECTOR
          </h2>
          <div class="w-32 h-1.5 bg-colegio-yellow mx-auto mt-6"></div>
        </div>

        <!-- Contenido en Dos Columnas -->
        <div class="grid md:grid-cols-2 gap-16 items-center">
          
          <!-- Columna Izquierda: Texto -->
          <div class="space-y-6">
            <h3 class="text-4xl md:text-5xl font-black text-colegio-blue uppercase leading-tight">
              TÍTULO DEL LIBRO
            </h3>
            <p class="text-gray-700 text-lg leading-relaxed">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. 
              Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. 
              Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
            </p>
          </div>

          <!-- Columna Derecha: Tarjeta del Libro + Navegación -->
          <div class="flex items-center gap-6 justify-center md:justify-end">
            
            <!-- Tarjeta del Libro -->
            <div class="book-card bg-gradient-to-br from-gray-100 to-gray-200 rounded-3xl shadow-2xl overflow-hidden w-72 h-96 flex items-center justify-center border-4 border-colegio-blue/10">
              <img 
                src="/PlanLector/libro-ejemplo.jpg" 
                alt="Portada del libro"
                class="w-full h-full object-cover"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'"
              />
              <!-- Placeholder si no hay imagen -->
              <div class="hidden flex-col items-center justify-center text-center p-8 text-colegio-blue">
                <svg class="w-24 h-24 mb-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
                </svg>
                <p class="font-bold text-xl">PORTADA DEL LIBRO</p>
              </div>
            </div>

            <!-- Botón de Navegación Circular -->
            <button 
              class="nav-button bg-colegio-yellow hover:bg-colegio-blue text-colegio-blue hover:text-white rounded-full w-16 h-16 flex items-center justify-center shadow-lg transition-all duration-300 transform hover:scale-110 hover:shadow-xl"
              aria-label="Siguiente libro"
            >
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"/>
              </svg>
            </button>

          </div>
        </div>

      </div>
    </section>

  </main>
</Layout>

<style>
  /* Animaciones personalizadas */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  section {
    animation: fadeInUp 0.6s ease-out;
  }

  /* Animación hover para tarjeta del libro */
  .book-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .book-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  /* Animación del botón de navegación */
  .nav-button {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-button:active {
    transform: scale(0.95);
  }
</style>
