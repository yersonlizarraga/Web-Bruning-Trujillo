    currentPhotoIndex += direccion;
    
    // Loop circular
    if (currentPhotoIndex < 0) {
      currentPhotoIndex = currentCategoriaPhotos.length - 1;
    } else if (currentPhotoIndex >= currentCategoriaPhotos.length) {
      currentPhotoIndex = 0;
    }
    
    actualizarModalImagen();
  }

