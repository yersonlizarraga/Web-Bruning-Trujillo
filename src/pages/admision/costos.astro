    max-height: 0;
    opacity: 0;
    overflow: hidden;
  }

  /* Responsive table */
  @media (max-width: 768px) {
    table {
      font-size: 0.875rem;
    }
    
    th, td {
      padding: 0.75rem 0.5rem;
