<script>
  // Toggle hist贸rico en mobile
  const toggleBtn = document.getElementById('toggle-historico');
  const historicoTable = document.getElementById('historico-table');
  const chevronIcon = document.getElementById('chevron-icon');

  if (toggleBtn && historicoTable && chevronIcon) {
    // Ocultar tabla en mobile por defecto
    if (window.innerWidth < 768) {
      historicoTable.classList.add('hidden');
    }

    toggleBtn.addEventListener('click', () => {
      historicoTable.classList.toggle('hidden');
      chevronIcon.classList.toggle('rotate-180');
    });

    // Mostrar tabla en desktop
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 768) {
        historicoTable.classList.remove('hidden');
      }
    });
  }
</script>

<style>
