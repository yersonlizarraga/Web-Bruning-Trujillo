---

<!-- Overlay -->
<div id="sidebar-overlay" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[1050] opacity-0 pointer-events-none transition-opacity duration-300"></div>

<!-- Sidebar Panel -->
<aside id="sidebar-panel" class="fixed right-0 top-0 h-full w-full md:w-96 bg-white z-[1100] shadow-2xl transform translate-x-full transition-transform duration-500 ease-in-out overflow-y-auto">
  <!-- Header -->
  <div class="bg-gradient-to-r from-colegio-blue to-colegio-blue/90 text-white p-6 sticky top-0 z-10">
    <div class="flex justify-between items-center">
      <div>
        <h2 class="text-2xl font-black">Menú Completo</h2>
        <p class="text-blue-200 text-sm">Accede a toda la información</p>
      </div>
      <button id="sidebar-close" class="p-2 hover:bg-white/20 rounded-full transition-all">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6 space-y-6">
    
    <!-- Información Institucional -->
    <div class="sidebar-section">
      <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-3 flex items-center gap-2">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
          <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
        </svg>
        Información
      </h3>
      <div class="space-y-2">
        <a href="/informacion-2026" class="sidebar-link group">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-yellow-100 flex items-center justify-center group-hover:bg-colegio-yellow transition-colors">
              <svg class="w-5 h-5 text-colegio-blue" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="flex-1">
              <div class="font-semibold text-gray-800 group-hover:text-colegio-blue transition-colors">Información 2026</div>
              <div class="text-xs text-gray-500">Ciclo escolar actual</div>
            </div>
            <svg class="w-5 h-5 text-gray-400 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </a>

        <a href="/informacion-2025" class="sidebar-link group">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-yellow-100 flex items-center justify-center group-hover:bg-colegio-yellow transition-colors">
              <svg class="w-5 h-5 text-colegio-blue" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="flex-1">
              <div class="font-semibold text-gray-800 group-hover:text-colegio-blue transition-colors">Información 2025</div>
              <div class="text-xs text-gray-500">Ciclo escolar anterior</div>
            </div>
            <svg class="w-5 h-5 text-gray-400 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </a>
      </div>
    </div>

    <!-- Talleres -->
    <div class="sidebar-section">
      <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-3 flex items-center gap-2">
